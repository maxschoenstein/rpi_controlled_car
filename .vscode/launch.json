    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Control",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/control/src/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Node Debugger: HMI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/hmi/src/server.js",
            "console": "integratedTerminal"
        }
    ]
}